#!/bin/zsh
# remove outdated binaries from directories
emulate -L zsh; setopt $_znap_opts

local -a files=( $^@/*.zwc(#qN.) ); (( $# > 0 )) ||
  files=( $^fpath/*.zwc(#qN.) )
local -i ret=0
local bin; for bin in $files; do
  if [[ $bin -ot ${bin%.zwc} ]]; then
    rm -f $bin
    ret+=$?
  fi
done
return ret
